#include <stdio.h>
int main() 
{
    int i, n, fact;

    printf("Ingrese el numero n: ");
    scanf("%d", &n); // Leer el número ingresado por el usuario

    fact = 1; // Inicializar el factorial como 1

    printf("0! = %d\n", fact); // Mostrar el factorial de 0

    for (i = 1; i <= n; i++) {
        fact = fact * i; // Calcular el factorial multiplicando el factorial actual por el número actual

        printf("%d! = %d\n", i, fact); // Mostrar el factorial del número actual
    }
    getch(); 
    return 0;
}
